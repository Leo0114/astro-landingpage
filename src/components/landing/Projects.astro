---
import projects from "../../config/projects.json";
---

<h2 class="font-bold text-5xl text-center my-8"></h2>

{
  projects.map((projects) => (
    <div class=" flex flex-col mb-2 md:flex-row text-center md:text-left">
      <div class=" flex-1  p-4">
        <h2 class=" font-bold text-2xl my-4">{projects.title}</h2>
        <p class=" my-2">{projects.description}</p>
        <button class=" bg-indigo-600  px-3 py-2 hover:bg-indigo-400 rounded-lg">
          More info
        </button>
      </div>
      <div class=" flex-1">
        <img src={projects.image} alt="" class=" w-72 m-auto" />
      </div>
    </div>
  ))
}
